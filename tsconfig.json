{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
    "paths": {
      "$lib":      [ "./src/lib" ],
      "$lib/*":    [ "./src/lib/*" ],
      "$db":       [ "./src/lib/server/db" ],
      "$db/*":     [ "./src/lib/server/db/*" ],
      "$comp":     [ "./src/components" ],
      "$comp/*":   [ "./src/components/*" ],
      "$stores":   [ "./src/stores/" ],
      "$stores/*": [ "./src/stores/*" ],
    }
	}
}
